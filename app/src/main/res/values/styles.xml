<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="singerLayout">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">@dimen/dim0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!-- Style for the Singer Name TextView -->
    <style name="singerName">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_marginLeft">@dimen/dim16dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
        <item name="android:text">@string/singerName</item>
    </style>

    <style name="singerCover">
        <item name="android:layout_height">@dimen/dim150dp</item>
        <item name="android:layout_width">@dimen/dim150dp</item>
        <item name="android:layout_marginLeft">@dimen/dim16dp</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <!-- Styles for Control Bar -->
    <style name="mainControl">
        <item name="android:layout_height">@dimen/dim70dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:padding">@dimen/dim8dp</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>
    <style name="mControlPanel">
        <item name="android:layout_width">@dimen/dim0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
    </style>

</resources>
